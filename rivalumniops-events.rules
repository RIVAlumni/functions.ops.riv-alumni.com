rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if false;

      match /thumbnails/{eventCode} {
        allow read: if resource.contentType in ['image/jpeg', 'image/png'];
        allow write: if request.auth == null;
      }
    }
  }
}
